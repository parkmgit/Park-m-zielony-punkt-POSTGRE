# PostgreSQL Database Configuration
# Skopiuj ten plik do .env.local i uzupełnij danymi

# OPCJA 1: Connection String (preferowana dla Vercel/Neon)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# OPCJA 2: Osobne parametry (dla lokalnego PostgreSQL)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_NAME=park_m_trees
# DB_SSL=false

# Node Environment
NODE_ENV=production

# Cloudinary (do przechowywania zdjęć)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
